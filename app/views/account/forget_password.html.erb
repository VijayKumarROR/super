<h3><%#= flash[:notice]%></h3>
<h2 align="center">Lets Find Your Account</h2>
<div class="container">
<%= form_for (:user) do |f| %>


<div class="row">
<h1 align="center">Please Enter your Email</h1>

<div class="col-sm-12">
<%= f.label :email %> </br>
<%= f.email_field :email, :class=> "email"%>
</div>


<div class="col-sm-2 offset">
<%= f.submit "Submit"%>
</div>

</div>




</div>
<%end%>

